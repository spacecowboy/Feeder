<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nononsenseapps.feeder" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Writing sync files to SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- For getting Google account -->
    <!--<uses-permission android:name="android.permission.GET_ACCOUNTS" />-->
    <!-- For getting Google account auth token -->
    <!--<uses-permission android:name="android.permission.USE_CREDENTIALS" />-->
    <!-- For syncing -->
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.nononsenseapps.feeder.ui.FeedActivity"
            android:label="@string/app_name"
            android:theme="@style/FeedsTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nononsenseapps.feeder.ui.ReaderActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.nononsenseapps.feeder.ui.FeedActivity"
            android:theme="@style/ReaderTheme" >
>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nononsenseapps.feeder.ui.FeedActivity" />
        </activity>
        <activity
            android:name="com.nononsenseapps.feeder.ui.EditFeedActivity"
            android:label="@string/title_activity_edit_feed"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:parentActivityName="com.nononsenseapps.feeder.ui.FeedActivity"
            android:theme="@style/EditFeedTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nononsenseapps.feeder.ui.FeedActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.nononsenseapps.feeder.db.RssContentProvider"
            android:authorities="com.nononsenseapps.feeder.provider"
            android:enabled="true"
            android:label="@string/app_name"
            android:exported="false" >
        </provider>

        <service
            android:name="com.nononsenseapps.feeder.model.RssSyncHelper"
            android:exported="false">
        </service>
        <!-- todo later -->
        <service
            android:name="com.nononsenseapps.feeder.model.RssSyncAdapterService"
            android:enabled="false"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
    </application>

</manifest>
